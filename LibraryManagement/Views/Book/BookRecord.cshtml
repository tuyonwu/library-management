@{
    var BookRecordGrid = (List<LibraryManagement.Model.BookRecord.BookRecordGrid>)ViewBag.BookRecordGrid;
}

<div class="modal-header">
    <h5 class="modal-title" id="popupWindowLabel">借閱紀錄</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="py-4">
        @if (BookRecordGrid.Count() == 0)
        {
            <h3 class="mb-4 text-center">尚無借閱紀錄</h3>
        }
        else
        {
            <h3 class="mb-4 text-center">@BookRecordGrid.FirstOrDefault().BookName</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">借閱人</th>
                        <th scope="col">借閱日期</th>
                        <th scope="col">還書日期</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in BookRecordGrid)
                    {
                        <tr>
                            <th scope="row">@record.SerialNo</th>
                            <td>@record.Borrower</td>
                            <td>
                                @if (record.BorrowDate.HasValue)
                                {@record.ReturnDate.Value.ToString("yyyy/MM/dd")}
                            </td>
                            <td>
                                @if (record.ReturnDate.HasValue)
                                {@record.ReturnDate.Value.ToString("yyyy/MM/dd")}
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal">關閉</button>
</div>